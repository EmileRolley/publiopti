{
	"compilerOptions": {
		"target": "ES2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "build",
		"rootDir": "src",
		"types": ["node", "jest"],
		"esModuleInterop": true,
		"lib": [
			"es2021"
		],
		"sourceMap":true,
		"module": "commonjs"
	},
	"ts-node": {
		"transpileOnly": true,
		"files": true
	},
	"include": ["src/**/*.ts", "./build/"],
	"exclude": ["./node_modules/", "./build/", "./jest.config.js", "./test/"]
}
